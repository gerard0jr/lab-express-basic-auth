<div>
  <h1>Crea un usuario</h1>
  <form action="/auth/signup" method="POST">
    <p>
      Username:
      <input type="text" name="username">
    </p>
    <p>
      Password:
      <input type="password" name="password">
    </p>
    <input type="submit" value="Crear">
  </form>
</div>

{{#if message}}
  <p class="error">{{message}}</p>
{{/if}}